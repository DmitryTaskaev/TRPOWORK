<Window x:Class="ComboBoxWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComboBoxWPF"
        mc:Ignorable="d"
        Title="Арифметические действия" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Left">
        <Label Content="Первое число:" Padding="0" Margin="10,10,0,0"/>
        <TextBox x:Name="Anumb" Width="750" Height="25" Margin="10,5,0,0"/>        
        <Label Content="Второе число:" Padding="0" Margin="10,5,0,0"/>
        <TextBox x:Name="BNumb" Width="750" Height="25" Margin="10,5,0,0"/>
        <Label Content="Операция" Padding="0" Margin="10,5,0,0"/>
        <ComboBox x:Name="CB" Width="750" Height="25" Margin="10,5,0,0">
            <ComboBoxItem Content="Умножение" />
            <ComboBoxItem Content="Деление" />
            <ComboBoxItem Content="Вычетание" />
            <ComboBoxItem Content="Сложение" />
        </ComboBox>
        <Label Content="Результат:" Padding="0" Margin="10,5,0,0"/>
        <TextBox x:Name="Result" Width="750" Height="25" Margin="10,5,0,0" IsReadOnly="True"/>
        <Button x:Name="resBtn" Content="Вычеслить" Width="750" Height="25" Margin="10,5,0,0" Click="resBtn_Click" />
    </StackPanel>
</Window>
