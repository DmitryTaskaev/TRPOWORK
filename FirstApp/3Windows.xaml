<Window x:Class="FirstApp._3Windows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstApp"
        mc:Ignorable="d"
        Title="Main Windows" Height="387" Width="310">
    <StackPanel>
        <CheckBox x:Name="CB" Content="Показать как диалоговое окно" HorizontalAlignment="Right" Margin="0,5,4,5"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="W1" Grid.Row="0" Grid.Column="0" Content="Окно 1" Click="W1_Click"/>
            <Button x:Name="W2" Grid.Row="1" Grid.Column="1" Content="Окно 2" Click="W2_Click"/>
            <Button x:Name="W3" Grid.Row="2" Grid.Column="2" Content="Окно 3" Click="W3_Click"/>
        </Grid>
        <Button x:Name="Exit" Content="Выход" HorizontalAlignment="Left" Width="100" Height="30"/>
    </StackPanel>
</Window>
