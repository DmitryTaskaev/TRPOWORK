<Window x:Class="FirstApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstApp"
        mc:Ignorable="d"
        Title="Миниатюрный решатель" Height="450" Width="305.435">
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Решение квадратного уравнения" Margin="0,5,0,5" Padding="0"/>
        <Label Content="Введите a:" FontSize="10" Opacity="0.6" Padding="0" Margin="0,10,0,3"/>
        <TextBox x:Name="TbA" Width="250" Height="25"/>
        <Label Content="Введите b:" FontSize="10" Opacity="0.6" Padding="0" Margin="0,10,0,3"/>
        <TextBox x:Name="TbB" Width="250" Height="25"/>        
        <Label Content="Введите c:" FontSize="10" Opacity="0.6" Padding="0" Margin="0,10,0,3"/>
        <TextBox x:Name="TbC" Width="250" Height="25"/>
        <Label Content="Результат:" FontSize="10" Opacity="0.6" Padding="0" Margin="0,10,0,3"/>
        <Label x:Name="LResult" Content="0" FontSize="10" Padding="0" Margin="0,0,0,3"/>
        <Button Content="Рассчитать" Height="25" Margin="0,5,0,3" Click="Button_Click"/>
        <Button Content="Переход" Height="25" Margin="0,5,0,3" Click="Button_Click_1"/>
    </StackPanel>
</Window>
