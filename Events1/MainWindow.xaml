<Window x:Class="Events1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Events1"
        mc:Ignorable="d"
        Title="Главная страница" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Выбор страницы:" Margin="0,0,10,0" FontSize="13"/>
            <ComboBox x:Name="CB" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="Всплытие и туннелирование"/>
                <ComboBoxItem Content="Прикрепленные события"/>
                <ComboBoxItem Content="Порядок событий в TextBox"/>
                <ComboBoxItem Content="Валидация ввода"/>
            </ComboBox>
        </StackPanel>
        <Frame Height="391" Name="MainFrame"/>
    </StackPanel>
</Window>
